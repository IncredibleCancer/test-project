{% extends '@TodoList/base.html.twig' %}

{% block title %}ваши задачи{% endblock %}


{% block main_content %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12"><h1><small>Ваши задачи</small></h1></div>
            <div class="col-xs-12 col-md-6 col-lg-3">
                <h3 class="text-center"><small>Списки задач</small></h3>
                <ol>
                    {% for taskList in taskLists %}
                        <li class="well well-sm">
                            <a href="{{ path('todo.list.show', { 'listId' : taskList.id }) }}">{{ taskList.title }}</a>
                        </li>
                    {% endfor %}
                </ol>
            </div>
            <div class="col-xs-12 col-md-6 col-lg-3">
                <h3 class="text-center"><small>Запланированные</small></h3>
                {% for task in tasksWait %}
                    <div class="task well">
                        <a href="{{ path('todo.task.show', { 'listId' : task.taskList.id, 'taskId' : task.id }) }}">{{ task.title }}</a>
                        <p>{{ task.description }}</p>
                        <span>Список: </span>
                        <a href="{{ path('todo.list.show', { 'listId' : task.taskList.id }) }}">{{ task.taskList.title }}</a>
                    </div>
                {% endfor %}
            </div>
            <div class="col-xs-12 col-md-6 col-lg-3">
                <h3 class="text-center"><small>Выполняющиеся</small></h3>
                {% for task in tasksInProgress %}
                    <div class="task well">
                        <a href="{{ path('todo.task.show', { 'listId' : task.taskList.id, 'taskId' : task.id }) }}">{{ task.title }}</a>
                        <p>{{ task.description }}</p>
                        <span>Список: </span>
                        <a href="{{ path('todo.list.show', { 'listId' : task.taskList.id }) }}">{{ task.taskList.title }}</a>
                    </div>
                {% endfor %}
            </div>
            <div class="col-xs-12 col-md-6 col-lg-3">
                <h3 class="text-center"><small>Закрытые</small></h3>
                {% for task in tasksResolved %}
                    <div class="task well">
                        <a href="{{ path('todo.task.show', { 'listId' : task.taskList.id, 'taskId' : task.id }) }}">{{ task.title }}</a>
                        <p>{{ task.description }}</p>
                        <span>Список: </span>
                        <a href="{{ path('todo.list.show', { 'listId' : task.taskList.id }) }}">{{ task.taskList.title }}</a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
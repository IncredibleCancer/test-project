{% extends '@TodoList/base.html.twig' %}

{% block title %}создание списка задач{% endblock %}

{% block main_content %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1><small>Добавить список задач</small></h1>
            </div>
            <div class="col-xs-12">
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.title) }}
                    {{ form_errors(form.title) }}
                    {{ form_widget(form.title, { 'attr' : { 'class' : 'form-control' } }) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.save, { 'label' : 'Добавить', 'attr' : { 'class' : 'btn btn-success' } }) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}